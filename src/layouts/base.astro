---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMeta";

const { entry } = Astro.props;

/* âœ… SAFE meta handling */
let meta;

if (entry?.collection) {
  // Content-collection pages (old system)
  meta = getMeta(entry);
} else {
  // API-driven pages (new system)
  meta = {
    title: entry?.data?.title || "News",
    description: entry?.data?.description || "",
    image: entry?.data?.cover || "",
  };
}
---

<html lang={SITE.locale} dir={SITE.dir}>
  <Head meta={meta} />
  <body class="flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
