---
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry, Meta, ArticleMeta } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMeta";
import { getRuntimeSite } from "@/lib/siteConfig";

type Props = {
  entry?: Entry;
  meta?: Meta | ArticleMeta;
};

const { entry, meta: passedMeta } = Astro.props;

/* ---------- SITE (MULTI-DOMAIN SAFE) ---------- */
const site = getRuntimeSite(Astro.request);

/* ---------- RESOLVE META ---------- */
let meta: Meta | ArticleMeta;

if (passedMeta) {
  // ✅ API / Worker / dynamic pages (articles)
  meta = passedMeta;
} else if (entry?.collection) {
  // ✅ Astro content collections
  meta = await getMeta(entry);
} else {
  // ✅ HOME PAGE (multi-domain safe)
  meta = {
    title: site.title,
    metaTitle: site.title,
    description: site.shortTitle
      ? `Latest news, expert insights, and trending stories from ${site.title}.`
      : "Latest news, expert insights, and trending stories.",
    type: "website",
    ogImage: "/og/home.jpg", // shared default
    ogImageAlt: site.title,
  };
}

/* ---------- HTML ATTRIBUTES ---------- */
const locale = "en";
const dir = "ltr";
---

<html lang={locale} dir={dir}>
  <Head meta={meta} />
  <body class="flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
