---
import BaseLayout from "@/layouts/base.astro";
import ContentLayout from "@/layouts/content.astro";
import { getSiteFromRequest } from "@/lib/siteConfig";

const site = getSiteFromRequest(Astro.request);

/* ---------- SEO ENTRY ---------- */
const entry = {
  data: {
    title: "Contact Us",
    description: `Get in touch with ${site.title}`,
  },
};

/* ---------- CONTACT VALUES ---------- */
const email = site.hostname ? `info@${site.hostname}` : "info@example.com";

const siteUrl = site.origin;
---

<BaseLayout entry={entry}>
  <ContentLayout>
    <article class="prose mx-auto">
      <h1>Contact Us</h1>

      <p>
        We value your feedback, suggestions, and story ideas. Please feel free
        to contact us:
      </p>

      <ul>
        <li>
          <strong>Email:</strong>{" "}
          <a href={`mailto:${email}`}>{email}</a>
        </li>

        <li>
          <strong>Website:</strong>{" "}
          <a href={siteUrl}>{siteUrl}</a>
        </li>
      </ul>

      <p>
        Our editorial team looks forward to connecting with readers,
        contributors, and partners at <strong>{site.title}</strong>.
      </p>
    </article>
  </ContentLayout>
</BaseLayout>
