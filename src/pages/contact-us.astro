---
export const prerender = false;

import BaseLayout from "@/layouts/base.astro";
import ContentLayout from "@/layouts/content.astro";
import { getRuntimeSite } from "@/lib/siteConfig";

const site = getRuntimeSite(Astro.request);

/* ---------- SEO ---------- */
const entry = {
  data: {
    title: "Contact Us",
    description: `Get in touch with ${site.title}`,
  },
};

/* ---------- CONTACT INFO ---------- */
const email = site.contactEmail || "info@example.com";

/* âœ… ALWAYS AVAILABLE WEBSITE */
const website = site.publicUrl || site.origin || "";
---

<BaseLayout entry={entry}>
  <ContentLayout>
    <article class="prose mx-auto">
      <h1>Contact Us</h1>

      <p>
        We value your feedback, suggestions, and story ideas. Please feel free
        to contact us:
      </p>

      <ul>
        <li>
          <strong>Email:</strong>
          <a href={`mailto:${email}`}>{email}</a>
        </li>

        {
          website && (
            <li>
              <strong>Website:</strong>
              <a href={website} target="_blank" rel="noopener noreferrer">
                {website}
              </a>
            </li>
          )
        }
      </ul>

      <p>
        Our editorial team looks forward to connecting with readers,
        contributors, and partners at <strong>{site.title}</strong>.
      </p>
    </article>
  </ContentLayout>
</BaseLayout>
